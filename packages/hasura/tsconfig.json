{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "module": "CommonJS",
    "moduleResolution":"node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "lib":["es2022"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./test/*"],
      "~/*": ["*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**",
    "node_modules/**"
  ]
}
